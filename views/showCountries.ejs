
<style>
    
    table, th, td{
        border: 1px solid black;;
    }

</style>
<h1>Countries</h1>
<button><a href="\addCountry">Add Country</a></button>
<table>
    <tr>
        <th>Country Code</th>
        <th>Country Name</th>
        <th>Country Details</th>
    </tr>
    <% countries.forEach((country) =>
    { %>
    <tr>
        <td><%=country.co_code %></td>
        <td><%=country.co_name %></td>
        <td><%=country.co_details  %></td>
        <td><a href="<%= "/updateCountry/" + country.co_code %>">Update</a></td>
        <td><a href="<%= "/deleteCountry/" + country.co_code %>">Delete</td>
    </tr>
    <% }) %>
</table>
<a href="\">Home</a>


